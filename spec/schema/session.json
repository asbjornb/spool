{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SessionEntry",
  "description": "Session metadata entry. Must be the first entry in every Spool file.",
  "type": "object",
  "required": [
    "agent",
    "id",
    "recorded_at",
    "ts",
    "version"
  ],
  "properties": {
    "agent": {
      "description": "Agent identifier (e.g., \"claude-code\", \"codex\")",
      "type": "string"
    },
    "agent_version": {
      "description": "Version of the agent software",
      "type": [
        "string",
        "null"
      ]
    },
    "author": {
      "description": "Creator's name or handle",
      "type": [
        "string",
        "null"
      ]
    },
    "duration_ms": {
      "description": "Total session duration in milliseconds",
      "type": [
        "integer",
        "null"
      ],
      "format": "uint64",
      "minimum": 0.0
    },
    "ended": {
      "description": "How the session ended",
      "anyOf": [
        {
          "$ref": "#/definitions/SessionEndState"
        },
        {
          "type": "null"
        }
      ]
    },
    "entry_count": {
      "description": "Total number of entries",
      "type": [
        "integer",
        "null"
      ],
      "format": "uint",
      "minimum": 0.0
    },
    "files_modified": {
      "description": "File paths modified during the session",
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string"
      }
    },
    "first_prompt": {
      "description": "First user prompt text (truncated), useful for browsing/indexing",
      "type": [
        "string",
        "null"
      ]
    },
    "id": {
      "description": "Unique identifier",
      "type": "string",
      "format": "uuid"
    },
    "recorded_at": {
      "description": "Wall-clock time when recording started",
      "type": "string",
      "format": "date-time"
    },
    "schema_url": {
      "description": "URL to the specification version",
      "type": [
        "string",
        "null"
      ]
    },
    "tags": {
      "description": "Searchable tags",
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string"
      }
    },
    "title": {
      "description": "Human-readable session title",
      "type": [
        "string",
        "null"
      ]
    },
    "tools_used": {
      "description": "Tool names invoked during session",
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string"
      }
    },
    "trimmed": {
      "description": "Trimming metadata if file was trimmed",
      "anyOf": [
        {
          "$ref": "#/definitions/TrimmedMetadata"
        },
        {
          "type": "null"
        }
      ]
    },
    "ts": {
      "description": "Timestamp (must be 0)",
      "type": "integer",
      "format": "uint64",
      "minimum": 0.0
    },
    "version": {
      "description": "Format version (e.g., \"1.0\")",
      "type": "string"
    }
  },
  "additionalProperties": true,
  "definitions": {
    "SessionEndState": {
      "description": "How a session ended",
      "type": "string",
      "enum": [
        "completed",
        "cancelled",
        "error",
        "timeout",
        "unknown"
      ]
    },
    "TrimmedMetadata": {
      "description": "Metadata about trimming",
      "type": "object",
      "required": [
        "kept_range",
        "original_duration_ms"
      ],
      "properties": {
        "kept_range": {
          "description": "Kept range as [start_ms, end_ms]",
          "type": "array",
          "items": [
            {
              "type": "integer",
              "format": "uint64",
              "minimum": 0.0
            },
            {
              "type": "integer",
              "format": "uint64",
              "minimum": 0.0
            }
          ],
          "maxItems": 2,
          "minItems": 2
        },
        "original_duration_ms": {
          "description": "Duration of the original recording in milliseconds",
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        }
      }
    }
  }
}
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AnnotationEntry",
  "description": "Annotation entry",
  "type": "object",
  "required": [
    "content",
    "id",
    "target_id",
    "ts"
  ],
  "properties": {
    "author": {
      "type": [
        "string",
        "null"
      ]
    },
    "content": {
      "type": "string"
    },
    "created_at": {
      "type": [
        "string",
        "null"
      ],
      "format": "date-time"
    },
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "style": {
      "anyOf": [
        {
          "$ref": "#/definitions/AnnotationStyle"
        },
        {
          "type": "null"
        }
      ]
    },
    "target_id": {
      "type": "string",
      "format": "uuid"
    },
    "ts": {
      "type": "integer",
      "format": "uint64",
      "minimum": 0.0
    }
  },
  "additionalProperties": true,
  "definitions": {
    "AnnotationStyle": {
      "description": "Annotation display style",
      "type": "string",
      "enum": [
        "highlight",
        "comment",
        "pin",
        "warning",
        "success"
      ]
    }
  }
}